<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="android:textViewStyle">@style/AppTheme.MaterialTextView</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_white_24dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
    </style>

H    <style name="Tile" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dashboard_tile_height</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TileTeamSize" parent="Tile">
        <item name="android:background">@color/tile_team_size_background_color</item>
    </style>

    <style name="TileShakeBeta" parent="Tile">
        <item name="android:background">@drawable/border_tile_shake_beta</item>
    </style>

    <style name="TileLastLineup" parent="Tile">
        <item name="android:background">@drawable/border_tile_shake_beta</item>
    </style>

    <style name="TilePlayerMostUsed" parent="Tile">
        <item name="android:background">@color/white</item>
    </style>

    <!-- FIELD -->

    <style name="Field">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Field.Auto" parent="Field">
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- DARK -->

    <style name="Field.Green.Dark" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_dark</item>
    </style>

    <!-- NORMAL -->

    <style name="Field.Green" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color</item>
    </style>

    <style name="Field.Green.Biggest" parent="Field.Green">
        <item name="android:textAppearance">@style/TextBiggest</item>
    </style>

    <style name="Field.Green.Biggest.Auto" parent="Field.Green.Biggest">
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_biggest</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Field.Green.Big" parent="Field.Green">
        <item name="android:textAppearance">@style/TextBig</item>
    </style>

    <style name="Field.Green.Middle" parent="Field.Green">
        <item name="android:textAppearance">@style/TextMiddle</item>
    </style>

    <style name="Field.Green.Small" parent="Field.Green">
        <item name="android:textAppearance">@style/TextSmall</item>
    </style>

    <style name="Field.Green.Small.Auto" parent="Field.Green.Small">
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_small</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- LIGHT -->

    <style name="Field.Green.Light" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_light</item>
    </style>

    <style name="Field.Green.Light.Auto" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_light</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Field.Green.Light.Biggest" parent="Field.Green.Light">
        <item name="android:textAppearance">@style/TextBiggest</item>
    </style>

    <style name="Field.Green.Light.Biggest.Auto" parent="Field.Green.Light.Biggest">
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_biggest</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Field.Green.Light.Big" parent="Field.Green.Light">
        <item name="android:textAppearance">@style/TextBig</item>
    </style>

    <style name="Field.Green.Light.Big.Auto" parent="Field.Green.Light.Big">
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_big</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- LIGHTER -->

    <style name="Field.Green.Lighter" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_lighter</item>
    </style>

    <style name="Field.Green.Lighter.Middle" parent="Field.Green.Lighter">
        <item name="android:textAppearance">@style/TextMiddle</item>
    </style>

    <style name="Field.Green.Lighter.Middle.Auto" parent="Field.Green.Lighter.Middle">
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_middle</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Field.Green.Lighter.Small" parent="Field.Green.Lighter">
        <item name="android:textAppearance">@style/TextSmall</item>
    </style>

    <style name="Field.Green.Lighter.Small.Auto" parent="Field.Green.Lighter.Small">
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_small</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!-- HEADER -->

    <style name="Field.Header" parent="Field">
        <item name="android:background">@color/tile_player_most_used_header_color</item>
    </style>

    <style name="Field.Header.Rounded" parent="Field.Header">
        <item name="android:background">@drawable/shape_header_round_corner_black_border</item>
    </style>

    <!-- DRAWER -->

    <style name="PlayerDetailsContainer" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:padding">3dp</item>
    </style>

    <!-- Swap team dialog begin-->

    <style name="ListEmptyText">
        <item name="android:textColor">@color/list_empty_text</item>
    </style>

    <style name="ContactListItemLinearLayoutStyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParticipantListItem">
        <item name="android:textColor">@color/teams_list_text_primary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="PeopleListItemViewStyle">
        <item name="android:paddingLeft">24dp</item>
    </style>

    <!-- Swap team dialog end-->

    <style name="ButtonConfirm">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonCancel">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="strokeColor">@color/colorPrimaryVariant</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Material components theming -->

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="LineupName">
        <item name="android:textAppearance">@style/TextMiddle</item>
        <item name="autoSizeTextType">none</item>
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_middle</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TournamentName">
        <item name="android:textAppearance">@style/TextSmall</item>
        <item name="autoSizeTextType">none</item>
        <item name="autoSizeMaxTextSize">@dimen/app_max_text_size_small</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="FavouriteFieldPositionStyle" parent="TextSmall"/>

    <style name="TeamTypeCardStyle" parent="TextBiggest">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <style name="TilePlayerMostUsed.Number" parent="Field.Auto">
        <item name="android:padding">0dp</item>
    </style>

</resources>