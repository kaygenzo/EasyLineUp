<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

<!--    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">-->
<!--        <item name="android:textColor">#FF00FF</item>-->
<!--        <item name="android:textColorHint">@color/white</item>-->
<!--        <item name="colorControlNormal">#0000FF</item>-->
<!--        <item name="colorControlActivated">#00FF00</item>-->
<!--        <item name="colorControlHighlight">#FF0000</item>-->
<!--    </style>-->

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseballTextStyled" parent="AppTheme">
        <item name="android:fontFamily">@font/krinkes_decor_personal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Tile" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dashboard_tile_height</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TileTeamSize" parent="Tile">
        <item name="android:background">@drawable/border_tile_team_size</item>
    </style>

    <style name="TileShakeBeta" parent="Tile">
        <item name="android:background">@drawable/border_tile_shake_beta</item>
    </style>

    <style name="TileLastLineup" parent="Tile">
    </style>

    <style name="TilePlayerMostUsed" parent="Tile">
        <item name="android:background">@color/white</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="Field">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- DARK -->

    <style name="Field.Green.Dark" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_dark</item>
    </style>

    <!-- NORMAL -->

    <style name="Field.Green" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color</item>
    </style>

    <style name="Field.Green.Big" parent="Field.Green">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Field.Green.Biggest" parent="Field.Green">
        <item name="android:textSize">@dimen/text_size_biggest</item>
    </style>

    <style name="Field.Green.Middle" parent="Field.Green">
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="Field.Green.Small" parent="Field.Green">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- LIGHT -->

    <style name="Field.Green.Light" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_light</item>
    </style>

    <style name="Field.Green.Light.Big" parent="Field.Green.Light">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Field.Green.Light.Biggest" parent="Field.Green.Light">
        <item name="android:textSize">@dimen/text_size_biggest</item>
    </style>

    <!-- LIGHTER -->

    <style name="Field.Green.Lighter" parent="Field">
        <item name="android:background">@color/tile_player_most_used_background_color_lighter</item>
    </style>

    <style name="Field.Green.Lighter.Small" parent="Field.Green.Lighter">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Field.Green.Lighter.Big" parent="Field.Green.Lighter">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Field.Green.Lighter.Biggest" parent="Field.Green.Lighter">
        <item name="android:textSize">@dimen/text_size_biggest</item>
    </style>

    <!-- HEADER -->

    <style name="Field.Header" parent="Field">
        <item name="android:background">@color/tile_player_most_used_header_color</item>
        <item name="android:textSize">@dimen/text_size_smallest</item>
    </style>

    <!-- DRAWER -->

    <style name="AppTheme.Drawer" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/normal_uppercase_style_text_color</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="PlayerDetailsContainer" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ListEmptyText">
        <item name="android:textSize">@dimen/list_empty_text_size</item>
        <item name="android:textColor">@color/list_empty_text</item>
    </style>

    <style name="ContactListItemLinearLayoutStyle">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParticipantListItem">
        <item name="android:textSize">@dimen/teams_list_text_size</item>
        <item name="android:textColor">@color/teams_list_text_primary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="PeopleListItemViewStyle">
        <item name="android:paddingLeft">16dp</item>
    </style>

</resources>
