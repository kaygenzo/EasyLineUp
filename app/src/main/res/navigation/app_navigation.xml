<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.telen.easylineup.currentLineup.LastLineupFragment"
        android:label="@string/title_last_lineup"
        tools:layout="@layout/fragment_last_lineup" />

    <fragment
        android:id="@+id/navigation_lineups"
        android:name="com.telen.easylineup.lineup.list.CategorizedListLineupFragment"
        android:label="@string/title_lineups"
        tools:layout="@layout/fragment_list_lineup"/>

    <fragment
        android:id="@+id/navigation_team"
        android:name="com.telen.easylineup.team.TeamFragment"
        android:label="@string/title_team"
        tools:layout="@layout/fragment_player_list"/>

    <fragment
        android:id="@+id/playerDetailsFragment"
        android:name="com.telen.easylineup.team.details.PlayerDetailsFragment"
        android:label="@string/title_player_details"
        tools:layout="@layout/fragment_player_details"/>

    <fragment
        android:id="@+id/playerEditFragment"
        android:name="com.telen.easylineup.team.createPlayer.PlayerEditFragment"
        android:label="@string/title_player_edition"
        tools:layout="@layout/fragment_player_edit"/>

    <fragment
        android:id="@+id/lineupFragment"
        android:name="com.telen.easylineup.lineup.LineupFragment"
        android:label="@string/title_lineups"
        tools:layout="@layout/fragment_lineup_fixed"/>
    <fragment
        android:id="@+id/teamEditFragment"
        android:name="com.telen.easylineup.team.createTeam.TeamEditFragment"
        android:label="@string/title_team_edition"
        tools:layout="@layout/fragment_team_edit"/>

</navigation>