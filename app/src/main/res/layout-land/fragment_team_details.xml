<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/default_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="@dimen/default_margin">

            <ImageView
                android:id="@+id/teamImage"
                android:layout_width="@dimen/image_circle_size"
                android:layout_height="@dimen/image_circle_size"
                android:scaleType="centerInside"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:src="@drawable/ic_unknown_team" />

            <com.telen.easylineup.views.NormalUppercaseStyledTextView
                android:id="@+id/teamName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/teamImage"
                app:layout_constraintBottom_toBottomOf="@+id/teamImage"
                app:layout_constraintLeft_toRightOf="@+id/teamImage"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Team Name"
                android:textSize="@dimen/text_size_big"
                android:gravity="start"
                android:layout_marginStart="@dimen/default_margin"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/teamTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/teamImage"
                android:layout_marginTop="@dimen/default_margin">

                <ImageView
                    android:id="@+id/teamTypeImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/image_softball_ball"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/teamTypeDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/teamTypeImage"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="You are a softball team"
                    android:textSize="@dimen/text_size_big"
                    android:layout_marginStart="@dimen/default_margin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/teamPlayersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/teamTypeContainer"
                android:layout_marginTop="@dimen/default_margin">

                <ImageView
                    android:id="@+id/teamPlayersImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_team"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/teamPlayersDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/teamPlayersImage"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="You have 42 players"
                    android:textSize="@dimen/text_size_big"
                    android:layout_marginStart="@dimen/default_margin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/teamTournamentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/teamPlayersContainer"
                android:layout_marginTop="@dimen/default_margin">

                <ImageView
                    android:id="@+id/teamTournamentsImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_list_black_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/teamTournamentsDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/teamTournamentsImage"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="Your team participated to 32 tournaments and 98 games"
                    android:textSize="@dimen/text_size_big"
                    android:layout_marginStart="@dimen/default_margin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
