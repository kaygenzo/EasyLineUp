<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/changeModeCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/action_add_dp_flex"
        tools:checked="true"
        app:switchPadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/separator"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_defense_edition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="com.telen.easylineup.lineup.defense.DefenseFragmentEditable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeModeCheckBox"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_attack"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.telen.easylineup.lineup.attack.AttackFragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/separator"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>