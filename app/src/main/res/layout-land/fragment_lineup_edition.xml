<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/fragment_defense_edition"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.telen.easylineup.lineup.defense.DefenseFragmentEditable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/separator"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <fragment
        android:id="@+id/fragment_attack_fixed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.telen.easylineup.lineup.attack.AttackFragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/separator"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>