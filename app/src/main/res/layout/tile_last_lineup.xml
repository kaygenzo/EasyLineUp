<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Tile"
    android:layout_height="wrap_content"
    android:background="@drawable/border_tile_team_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/border_tile_team_size">

        <com.telen.easylineup.views.MLBStyledTextView
            android:id="@+id/lineup_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_defense_header_height"
            tools:text="Visitor vs Home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/lineup_title_size"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/card_defense_header_height"
            android:layout_height="@dimen/card_defense_header_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.telen.easylineup.views.DefenseFixedView
            android:background="@drawable/border_tile_last_lineup"
            android:id="@+id/fieldAndPlayersRootView"
            android:layout_width="@dimen/field_size"
            android:layout_height="@dimen/field_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineup_name"
            android:padding="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>