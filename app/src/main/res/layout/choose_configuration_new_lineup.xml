<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/lineupTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tournamentChoiceAutoComplete"
        app:layout_constraintVertical_chainStyle="packed"
        android:hint="Locale VS Visitors"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/tournamentChoiceAutoComplete"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineupTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>