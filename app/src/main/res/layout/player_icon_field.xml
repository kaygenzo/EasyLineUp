<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@android:color/transparent">

    <com.telen.easylineup.utils.SelectableRoundedImageView
        android:id="@+id/playerImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        tools:src="@drawable/unknown_player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="16dp"
        app:sriv_right_top_corner_radius="16dp"
        app:sriv_left_bottom_corner_radius="16dp"
        app:sriv_right_bottom_corner_radius="16dp"
        app:sriv_border_width="2dp"
        app:sriv_border_color="#FFFFFF"
        app:sriv_oval="true"
        tools:background="#000000"/>

    <TextView
        android:id="@+id/playerShirtNumber"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:text="99"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/player_shirt_number_round_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>