<?xml version="1.0" encoding="utf-8"?>
<pl.hypeapp.materialtimelineview.MaterialTimelineView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_timeline_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:timeline_bottom_radio_color="@color/tournaments_timeline_color"
    app:timeline_type="item"
    app:timeline_position="first"
    app:timeline_margin_start="@dimen/timeline_radio_margin_left"
    app:timeline_radio_outline_radius="@integer/timeline_radio_radius_outline"
    app:timeline_radio_radius="@integer/timeline_radio_radius">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/tile_player_most_used_header_color"/>

</pl.hypeapp.materialtimelineview.MaterialTimelineView>