<?xml version="1.0" encoding="utf-8"?>
<pl.hypeapp.materialtimelineview.MaterialTimelineView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/material_timeline_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:timeline_bottom_radio_color="@color/tournaments_timeline_color"
    app:timeline_type="item"
    app:timeline_position="first"
    app:timeline_margin_start="@dimen/timeline_radio_margin_left"
    app:timeline_radio_outline_radius="@integer/timeline_radio_radius_outline"
    app:timeline_radio_radius="@integer/timeline_radio_radius">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/tile_player_most_used_header_color">

        <com.telen.easylineup.views.NormalUppercaseStyledTextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_middle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:gravity="center"
            tools:text="The summary of this view. This text is long and it's expected to observe what will happen."/>

    </com.google.android.material.card.MaterialCardView>

</pl.hypeapp.materialtimelineview.MaterialTimelineView>