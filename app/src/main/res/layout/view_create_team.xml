<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.telen.easylineup.utils.SelectableRoundedImageView
        android:id="@+id/teamImage"
        android:layout_width="@dimen/player_screen_icon_size"
        android:layout_height="@dimen/player_screen_icon_size"
        tools:src="@drawable/pikachu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/formContainer"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="16dp"
        app:sriv_right_top_corner_radius="16dp"
        app:sriv_left_bottom_corner_radius="16dp"
        app:sriv_right_bottom_corner_radius="16dp"
        app:sriv_border_width="2dp"
        app:sriv_border_color="@color/colorAccent"
        app:sriv_oval="true"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.telen.easylineup.utils.SelectableRoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
        android:scaleType="centerCrop"
        app:sriv_left_top_corner_radius="16dp"
        app:sriv_right_top_corner_radius="16dp"
        app:sriv_left_bottom_corner_radius="16dp"
        app:sriv_right_bottom_corner_radius="16dp"
        app:sriv_border_width="4dp"
        app:sriv_border_color="#FFFFFFFF"
        app:sriv_oval="true"
        app:layout_constraintRight_toRightOf="@+id/teamImage"
        app:layout_constraintBottom_toBottomOf="@+id/teamImage"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/formContainer"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/teamImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/teamNameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/player_hint_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/teamNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

